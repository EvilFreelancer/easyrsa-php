{
  "name": "evilfreelancer/easyrsa-php",
  "type": "library",
  "description": "Wrapper on PHP for EasyRSA by OpenVPN team",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "EasyRSA\\": "./src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Paul Rock",
      "email": "paul@drteam.rocks",
      "homepage": "http://drteam.rocks/",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.4",
    "ext-curl": "*",
    "ext-json": "*",
    "splitbrain/php-archive": "^1.1"
  },
  "require-dev": {
    "ergebnis/phpstan-rules": "^0.15.0",
    "friendsofphp/php-cs-fixer": "^2.16",
    "larapack/dd": "^1.1",
    "limedeck/phpunit-detailed-printer": "^5.0",
    "orchestra/testbench": "^4.0|^5.0",
    "phpstan/phpstan": "^0.12.32",
    "phpstan/phpstan-strict-rules": "^0.12.2",
    "phpunit/phpunit": "^8.0",
    "rector/rector": "^0.7.41",
    "thecodingmachine/phpstan-strict-rules": "^0.12.0",
    "vlucas/phpdotenv": "^4.0"
  },
  "suggest": {
    "vlucas/phpdotenv": "^4.0"
  },
  "config": {
    "sort-packages": true,
    "preferred-install": "dist"
  },
  "scripts": {
    "lint": "rector process src && php-cs-fixer fix -v",
    "test:lint": "php-cs-fixer fix -v --dry-run",
    "test:rector": "rector process src --dry-run",
    "test:types": "phpstan analyse --ansi --memory-limit=0",
    "test:unit": "phpunit",
    "test": [
      "@test:lint",
      "@test:types",
      "@test:unit"
    ]
  }
}
